      <div class="col-6 offset-3">
        <form action="/adicionar-produto" method="post" enctype="multipart/form-data">
          <input name="nameProduct" type="text" class="form-control" placeholder="Nome do produto"/>
          <input name="valueProduct" type="number" class="form-control" placeholder="Valor do produto"/>
